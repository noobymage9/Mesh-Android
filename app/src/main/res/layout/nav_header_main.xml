<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/nav_header_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="@dimen/nav_header_icon_size"
        android:layout_height="@dimen/nav_header_icon_size"
        android:contentDescription="@string/default_nav_header_image_desc"
        app:srcCompat="@mipmap/default_icon"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/default_child_margin"
        />

    <TextView
        android:id="@+id/profile_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toEndOf="@id/profile_picture"
        android:layout_alignTop="@id/profile_picture"
        android:text="@string/default_nav_header_name"
        android:layout_margin="@dimen/default_child_margin"
        android:textSize="@dimen/nav_header_text_size"
        android:textStyle="bold"
        android:textColor="@color/headers"
        />

</RelativeLayout>
