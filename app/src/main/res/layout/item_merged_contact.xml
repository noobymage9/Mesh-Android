<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_contact_item">

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_searchbar_horizontal"
        android:text="@string/default_contact_name"
        android:textSize="@dimen/textsize_header"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/unmerge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="@string/action_unmerge"
        android:textSize="@dimen/textsize_big"
        android:layout_marginEnd="@dimen/margin_all_default"
        android:layout_centerVertical="true"
        android:textColor="@color/Tiger"
        android:clickable="true"
        android:focusable="true" />

</RelativeLayout>