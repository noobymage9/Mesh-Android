<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/delete_notification_card"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_settingitem"
    android:background="@drawable/settingfragment_item"
    >

    <Switch
        android:id="@+id/delete_notification_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:paddingHorizontal="@dimen/margin_all_default"
        />


    <TextView
        android:id="@+id/delete_notification_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting_delete_notification"
        android:layout_centerVertical="true"
        android:paddingHorizontal="@dimen/margin_all_default"
        android:textSize="@dimen/textsize_big"
        android:textStyle="bold"
        />




</RelativeLayout>