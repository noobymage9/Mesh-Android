<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/save_dialog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/setting_reset_custom_border"
    android:backgroundTint="@color/Montfort"
    android:layout_margin="-10dp">

    <Button
        android:id="@+id/add_button"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignTop="@id/add_field"
        android:layout_alignBottom="@id/add_field"
        android:background="@drawable/dialog_add"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        />

    <EditText
        android:id="@+id/add_field"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_toRightOf="@id/add_button"
        android:layout_toEndOf="@id/add_button"
        android:background="@drawable/setting_reset_custom_border"
        android:backgroundTint="@color/BritishBlue"
        android:textSize="16sp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tag_list"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:paddingLeft="30dp"
        android:paddingStart="30dp"
        android:paddingRight="30dp"
        android:paddingEnd="30dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_below="@id/add_button"
        android:layout_alignLeft="@id/add_button"
        android:layout_alignRight="@id/add_field"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />
</RelativeLayout>