<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/save_dialog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/setting_reset_custom_border"
    android:backgroundTint="@color/background"
    android:padding="10dp">

    <Button
        android:id="@+id/add_button"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignTop="@id/add_field"
        android:layout_alignBottom="@id/add_field"
        android:paddingRight="5dp"
        android:paddingEnd="5dp"
        android:background="@drawable/dialog_add"
        />

    <EditText
        android:id="@+id/add_field"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:layout_toRightOf="@id/add_button"
        android:layout_toEndOf="@id/add_button"
        android:background="@drawable/setting_reset_custom_border"
        android:backgroundTint="@color/colorPrimary"
        android:textCursorDrawable="@null"
        android:textColor="@color/app_bar_items"
        android:textSize="16sp"
        android:imeOptions="actionDone"
        android:hint="@string/default_tag"
        android:autofillHints="@string/tag_autofill"
        android:textColorHint="@color/app_bar_items"
        android:inputType="text"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tag_list"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:paddingLeft="30dp"
        android:paddingStart="30dp"
        android:paddingRight="30dp"
        android:paddingEnd="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@id/add_button"
        android:layout_alignLeft="@id/add_button"
        android:layout_alignRight="@id/add_field"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />

    <Button
        android:id="@+id/save_bar"
        android:layout_width="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="40dp"
        android:layout_below="@id/tag_list"
        android:layout_alignLeft="@id/tag_list"
        android:layout_alignRight="@id/tag_list"
        android:background="@drawable/setting_reset_custom_border"
        android:textColor="@color/Black"
        android:text="@string/snackbar_save"
        />

</RelativeLayout>