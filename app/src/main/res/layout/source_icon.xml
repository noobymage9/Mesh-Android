<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/source_app">

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/first_source_app"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:id="@+id/second_source_app"
        android:layout_toLeftOf="@id/first_source_app"
        android:layout_toStartOf="@id/first_source_app"/>
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:id="@+id/third_source_app"
        android:layout_toLeftOf="@id/second_source_app"
        android:layout_toStartOf="@id/second_source_app"/>

</RelativeLayout>